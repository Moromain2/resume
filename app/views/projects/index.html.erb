<section id="project-index-wrapper">

<h1 class="section-title">Projects</h1>

<div class="project-cards-container">
  <% if @projects.any? %>
    <% @projects.each do |project| %>
    <div class="project-card">
      <h2><%= project.cover %></h2>
      <h3><%= project.title %></h3>
      <h4><%= project.tag %></h4>
      <p><%= project.intro %></p>
      <%= link_to 'Read More', project_path(project), :class => 'cta cta-flat' %>
    </div>
    <% end %>
  <% else %>
    <p style="color:#EEEEEE;">There is no project here yet.</p>
  <% end %>
</div>

</section>
